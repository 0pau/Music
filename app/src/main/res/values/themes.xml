<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.MusicDefault" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="windowBackground">@color/uui_windowBgLight</item>
        <item name="mainBrandColor">@color/brand_color</item>
        <item name="secondaryBrandColor">@color/brand_color</item>
        <item name="mainTextColor">@color/uui_mainTextLight</item>
        <item name="secondaryTextColor">@color/uui_secondaryTextLight</item>
        <item name="cardColor">@color/uui_cardLight</item>
        <item name="card2Color">@color/uui_card2Light</item>
        <item name="borderColor">@color/uui_borderLight</item>

        <item name="playerControlsFragmentFg">#15000000</item>
        <item name="playerControlsFragmentFgStrong">#35000000</item>
        <item name="playerControlsFragmentFgVeryStrong">#60000000</item>
        <item name="playerControlsFragmentFgVeryStrong2">#90000000</item>

        <item name="bottomSheetDialogTheme">@style/Theme.Music.BottomSheetDialog.P</item>

        <item name="android:windowBackground">?attr/windowBackground</item>
        <item name="android:textColorPrimary">?attr/mainTextColor</item>
    </style>

    <style name="Theme.Music" parent="Theme.MusicDefault">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.Music.BottomSheetDialog.P" parent="Theme.Music.BottomSheetDialog">
        <item name="windowBackground">@color/uui_windowBgLight</item>
        <item name="mainBrandColor">@color/brand_color</item>
        <item name="secondaryBrandColor">@color/brand_color</item>
        <item name="mainTextColor">@color/uui_mainTextLight</item>
        <item name="secondaryTextColor">@color/uui_secondaryTextLight</item>
        <item name="cardColor">@color/uui_cardLight</item>
        <item name="borderColor">@color/uui_borderLight</item>
    </style>
</resources>