<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.MusicDefault" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:statusBarColor">?attr/card_alt</item>
        <item name="android:navigationBarColor">?attr/card_alt</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="bg">@color/material_dynamic_neutral_variant95</item>
        <item name="fg">#AF000000</item>
        <item name="fg_disabled">@color/material_dynamic_neutral_variant30</item>
        <item name="fg_disabled2">@color/material_dynamic_neutral_variant70</item>
        <item name="fg_accent">@color/material_dynamic_primary60</item>
        <item name="fg_accent2">@color/material_dynamic_primary60</item>
        <item name="borders">@color/light_border</item>
        <item name="card">@color/material_dynamic_neutral_variant95</item>
        <item name="card_alt">@color/material_dynamic_neutral_variant90</item>
        <item name="cardborder">@color/light_card_border</item>
        <item name="fg_alpha">@color/black</item>
        <item name="playerControlsFragmentFg">#15000000</item>
        <item name="playerControlsFragmentFgStrong">#35000000</item>
        <item name="playerControlsFragmentFgVeryStrong">#60000000</item>
        <item name="playerControlsFragmentFgVeryStrong2">#90000000</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">?attr/bg</item>
        <item name="android:textColorPrimary">?attr/fg</item>
    </style>

    <style name="Theme.Music" parent="Theme.MusicDefault">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>