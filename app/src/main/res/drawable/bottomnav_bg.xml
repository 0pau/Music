<?xml version="1.0" encoding="utf-8"?>
<selector android:enterFadeDuration="150" android:exitFadeDuration="150" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" android:color="@color/brand_color">
        <shape android:shape="rectangle">
            <solid android:color="?attr/cardColor"></solid>
            <corners android:radius="10dp"></corners>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"></solid>
            <corners android:radius="10dp"></corners>
        </shape>
    </item>
</selector>