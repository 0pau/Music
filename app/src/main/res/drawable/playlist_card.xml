<?xml version="1.0" encoding="utf-8"?>
<selector android:enterFadeDuration="100" android:exitFadeDuration="100" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="?attr/playerControlsFragmentFg"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/playerControlsFragmentFgStrong"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>
</selector>