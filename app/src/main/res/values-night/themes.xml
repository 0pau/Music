<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicDefault" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="windowBackground">@color/uui_windowBgDark</item>
        <item name="mainBrandColor">@color/brand_color</item>
        <item name="secondaryBrandColor">@color/brand_color_secondary</item>
        <item name="mainTextColor">@color/uui_mainTextDark</item>
        <item name="secondaryTextColor">@color/uui_secondaryTextDark</item>
        <item name="cardColor">@color/uui_cardDark</item>
        <item name="card2Color">@color/uui_card2Dark</item>
        <item name="borderColor">@color/uui_borderDark</item>

        <item name="bottomSheetDialogTheme">@style/Theme.Music.BottomSheetDialog.P</item>

        <item name="playerControlsFragmentFg">#15FFFFFF</item>
        <item name="playerControlsFragmentFgStrong">#35FFFFFF</item>
        <item name="playerControlsFragmentFgVeryStrong">#60FFFFFF</item>
        <item name="playerControlsFragmentFgVeryStrong2">#90FFFFFF</item>

        <item name="android:windowBackground">?attr/windowBackground</item>
        <item name="android:textColorPrimary">?attr/mainTextColor</item>
    </style>

    <style name="Theme.Music.BottomSheetDialog.P" parent="Theme.Music.BottomSheetDialog">
        <item name="windowBackground">@color/uui_windowBgDark</item>
        <item name="mainBrandColor">@color/brand_color</item>
        <item name="secondaryBrandColor">@color/brand_color_secondary</item>
        <item name="mainTextColor">@color/uui_mainTextDark</item>
        <item name="secondaryTextColor">@color/uui_secondaryTextDark</item>
        <item name="cardColor">@color/uui_cardDark</item>
        <item name="borderColor">@color/uui_borderDark</item>
    </style>
</resources>