<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".PlayerControlsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.75"
            app:srcCompat="@drawable/unknown" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="30dp"
            android:paddingTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/playerFragmentTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:text="Title"
                        android:textAlignment="textStart"
                        android:textColor="?attr/fg"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/playerFragmentSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.6"
                        android:text="TextView"
                        android:textAlignment="textStart"
                        android:textColor="?attr/fg"
                        android:textSize="18sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/mediaRouterButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_weight="0"
                    android:background="@drawable/circle_button_bg"
                    android:clickable="true"
                    android:padding="10dp"
                    app:srcCompat="@drawable/cast" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="30dp">

                <SeekBar
                    android:id="@+id/seekBar"
                    style="@style/Widget.AppCompat.SeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="?attr/fg_accent"
                    android:indeterminate="false"
                    android:indeterminateBehavior="repeat"
                    android:indeterminateOnly="false"
                    android:indeterminateTint="?attr/fg_accent"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:progressTint="?attr/fg_accent"
                    android:splitTrack="true"
                    android:thumb="@drawable/seekbar_thumb"
                    android:thumbOffset="0dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/nowPlayingTrackCurrentPos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="00:00" />

                    <TextView
                        android:id="@+id/nowPlayingTrackTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="00:00" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="30dp">

                    <ImageView
                        android:id="@+id/playerFragmentPrevious"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_weight="0"
                        android:background="@drawable/circle_button_bg2"
                        android:clickable="true"
                        android:padding="10dp"
                        app:srcCompat="@drawable/skip_previous"
                        app:tint="@color/button_enabler" />

                    <ImageView
                        android:id="@+id/playerFragmentPlayPause"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="0"
                        android:background="@drawable/circle_button_bg2"
                        android:clickable="true"
                        android:onClick="pp"
                        android:padding="10dp"
                        app:srcCompat="@drawable/play_arrow"
                        app:tint="@color/button_enabler" />

                    <ImageView
                        android:id="@+id/playerFragmentNext"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_weight="0"
                        android:background="@drawable/circle_button_bg2"
                        android:clickable="true"
                        android:padding="10dp"
                        app:srcCompat="@drawable/skip_next"
                        app:tint="@color/button_enabler" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?selectableItemBackground"

                android:padding="10dp"
                android:tint="?attr/fg"
                app:srcCompat="@drawable/queue_music" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?selectableItemBackground"

                android:padding="10dp"
                android:tint="?attr/fg"
                app:srcCompat="@drawable/share" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?selectableItemBackground"

                android:padding="10dp"
                android:tint="?attr/fg"
                app:srcCompat="@drawable/shuffle" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?selectableItemBackground"

                android:padding="10dp"
                android:tint="?attr/fg"
                app:srcCompat="@drawable/repeat" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?selectableItemBackground"

                android:padding="10dp"
                android:tint="?attr/fg"
                app:srcCompat="@drawable/more_horiz" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>